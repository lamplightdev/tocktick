<div class='nav-timer'>
{{#ifobjcall grouped 'getNumCurrentTimers'}}
<div class='nav-timer__running'>
  <a href='/timers/' data-nav='true'><img class='rotate' src='/images/timer.svg' alt='Current timers' title='Current timers'></a>
  <div class='nav-timer__running__count'>{{objcall grouped 'getNumCurrentTimers'}}</div>
</div>
{{else}}
<form
  class='nav-form-start'

  action='/timer/start'
  method='post'

  data-api-action='/api/timer/start'
  >

  <input name='actiontime' type='hidden' value=''>
  <input name='jobid' type='hidden' value=''>

  <input name='description' type='hidden' value=''>

  <div class='timer timer--stopped'>
    <button class='timer__add' type='submit'><img src='/images/add.svg' alt='Start a new timer' title='Start a new timer'></button>
  </div>

</form>
{{/ifobjcall}}
</div>
