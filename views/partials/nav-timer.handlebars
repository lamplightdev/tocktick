<div class='nav-timer'>
{{#ifnotfalse grouped._timers.current}}
<div class='nav-timer__running'>
  <a href='/timers/{{grouped._timers.current._id}}' data-nav><img class='rotate' src='/images/timer.svg' alt='Current status'></a>
  <div class='nav-timer__running__count'>1</div>
</div>
{{else}}
<form
  class='nav-form-start'

  action='/timer/start'
  method='post'

  data-api-action='/api/timer/start'
  >

  <input name='actiontime' type='hidden' value=''>
  <input name='jobid' type='hidden' value=''>

  <input name='description' type='hidden' value=''>

  <div class='timer timer--stopped'>
    <button class='timer__add' type='submit'><img src='/images/add.svg' alt='start'></button>
  </div>

</form>
{{/ifnotfalse}}
</div>
